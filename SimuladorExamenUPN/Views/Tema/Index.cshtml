
<h2>Temas</h2>

    <div class="row">
        <div class="col-6">
            <form action="/tema/index" method="get">
                <div class="row">
                    <div class="col-8">
                        <input class="form-control" autocomplete="off" placeholder="Escriba un nombre para buscar" name="criterio" value="@ViewBag.Criterio" />
                    </div>
                    <div class="col"><button class="btn btn-primary">Buscar</button></div>
                </div>

            </form>
        </div>  
        <div class="col-6">
            <a id="creartemaLink" class="btn btn-primary float-right" href="/Tema/Crear">Crear</a>
        </div>
    </div>

<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Categorías</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>
                    @foreach (var categoria in item.Categorias)
                    {
                      
                        <span class="badge badge-primary">@categoria.Categoria.Nombre</span>
                    }
                </td>
                <td>@item.Descripcion</td>
                <td class="text-right">
                    <a href="/Tema/Editar?id=@item.Id">Editar</a> |
                    <a href="/Tema/Eliminar?id=@item.Id">Eliminar</a> |
                    <a href="/Pregunta/Index?temaId=@item.Id">Preguntas</a>
                </td>
            </tr>
        }
    </tbody>

</table>
