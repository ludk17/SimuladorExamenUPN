<h2>Crear Tema</h2>

<form action="/Tema/Crear" method="post">
    <div class="form-group">
        <label>Tema</label>
        <input name="Nombre" class="form-control" value="@Model.Nombre">
        @Html.ValidationMessage("Nombre")
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea class="form-control" name="Descripcion" rows="5">@Model.Descripcion</textarea>
        @Html.ValidationMessage("Descripcion")
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-link" href="/Tema">Cancelar</a>
</form>