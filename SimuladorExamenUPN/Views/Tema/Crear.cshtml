

<h2>Crear Tema</h2>

<form action="/Tema/Crear" method="post">
   
    <div class="form-group">
        <label>Tema</label>
        <input id="Nombre" name="Nombre" class="form-control" value="@Model.Nombre">
        @Html.ValidationMessage("Nombre")
    </div>
    <div class="form-group">
        <label>Categorias</label>
        <select multiple class="form-control" name="Ids">
            @foreach(var item in ViewBag.Categorias) { 
            <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea id="Descripcion" class="form-control" name="Descripcion" rows="5">@Model.Descripcion</textarea>
        @Html.ValidationMessage("Descripcion")
    </div>
    <button id="btnguardartema" type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-link" href="/Tema">Cancelar</a>
</form>